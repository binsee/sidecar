{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "dist",
    "target": "es5",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ]
}
